# ============================================
# CONFIGURATION DE L'API BACKEND
# ============================================

# URL de base de l'API Django
VITE_API_BASE_URL=http://localhost:8000

# Préfixe des endpoints API
VITE_API_PREFIX=/api

# ============================================
# CONFIGURATION DE L'ENVIRONNEMENT
# ============================================

# Environnement (development | production)
VITE_ENV=development

# Activer les logs de debug
VITE_DEBUG=true

# ============================================
# CONFIGURATION JWT
# ============================================

# Nom de la clé de stockage du token
VITE_AUTH_TOKEN_KEY=portfolio_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=portfolio_refresh_token

# ============================================
# CONFIGURATION DES FICHIERS
# ============================================

# URL de base pour les fichiers média
VITE_MEDIA_BASE_URL=http://localhost:8000/media

# ============================================
# AUTRES CONFIGURATIONS
# ============================================

# Durée de vie du cache (en secondes)
VITE_CACHE_TTL=300

# Nombre d'éléments par page
VITE_ITEMS_PER_PAGE=20